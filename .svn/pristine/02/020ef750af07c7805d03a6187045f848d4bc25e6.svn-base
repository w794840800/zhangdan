<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:paddingBottom="1dp">

    <LinearLayout
        android:id="@+id/llZhuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="15dp"
        android:background="#fff"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvZhuanru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:background="@drawable/rmb"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="转入"
            android:textColor="@color/colorWhite"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvZhuanchu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28.5dp"
            android:background="@drawable/rmb_empty"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="转出"
            android:textColor="@color/button_text_unable"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/bg_gray_smallradius"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="14dp"
            android:text="金额"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="￥"
                android:textColor="#262B36"
                android:textSize="24sp" />

            <com.beidou.ybz.accountbook.widget.ClearEditText
                android:id="@+id/cetMoney"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:hint="请输入转入/转出金额"
                android:inputType="numberDecimal"
                android:maxLength="12"
                android:textColor="#262B36"
                android:textColorHint="#D3D6DE"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>