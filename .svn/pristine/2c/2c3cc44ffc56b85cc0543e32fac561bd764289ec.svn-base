<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bbox_bg">

        <include layout="@layout/toolbar" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/shadow"/>

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg3"
            android:layout_marginRight="16dp"
            android:elevation="2dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="50dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:text="记完的帐，该如何传承？"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="18dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    android:background="@drawable/blackbox_nubmer"
                    android:gravity="center"
                    android:layout_marginLeft="23.5dp"
                    android:layout_marginRight="15.5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color3d"
                    android:textSize="12sp"
                    android:text="设定好黑匣子"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    android:background="@drawable/blackbox_nubmer"
                    android:gravity="center"
                    android:layout_marginLeft="23.5dp"
                    android:layout_marginRight="15.5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color3d"
                    android:layout_marginRight="20dp"
                    android:lineSpacingMultiplier="1.2"
                    android:textSize="12sp"
                    android:text="我们会帮你把想要传递的信息完整无误地交付到你的亲友手中"/>

            </LinearLayout>


            <TextView
                android:id="@+id/set_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即设置"
                android:textColor="@color/colorWhite"
                android:layout_marginRight="34dp"
                android:layout_marginBottom="20dp"
                android:textSize="12sp"
                android:layout_gravity="right"
                android:background="@drawable/rmb"/>
        </LinearLayout>

    </RelativeLayout>





</LinearLayout>
