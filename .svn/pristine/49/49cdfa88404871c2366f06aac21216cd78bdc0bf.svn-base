<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F7F9FF"
            android:orientation="vertical">

            <include layout="@layout/toolbar" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/shadow" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvCurrent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:paddingBottom="19dp"
                android:paddingRight="15dp"
                android:paddingTop="12dp" />

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="horizontal"
                android:paddingBottom="19dp"
                android:paddingLeft="16dp"
                android:paddingRight="15dp"
                android:paddingTop="17dp"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/llZhifubao"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bgcurrent_en"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="14dp"
                    android:paddingTop="14dp">

                    <ImageView
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:src="@drawable/zhifubao" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="支付宝"
                        android:textColor="@color/background"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llLicaitong"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/bgcurrent_un"
                    android:foreground="@drawable/bgcurrent_un"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="14dp"
                    android:paddingTop="14dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="42dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/licaitong" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="理财通"
                        android:textColor="@color/background"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llWeizhong"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/bgcurrent_un"
                    android:foreground="@drawable/bgcurrent_un"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="14dp"
                    android:paddingTop="14dp">

                    <ImageView
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/weizhong" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="微众银行"
                        android:textColor="@color/background"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="horizontal"
                android:paddingBottom="19dp"
                android:paddingLeft="16dp"
                android:paddingRight="15dp"
                android:paddingTop="0dp"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/llJindongjinku"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bgcurrent_un"
                    android:foreground="@drawable/bgcurrent_un"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="14dp"
                    android:paddingTop="14dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="42dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/jingdongjinku" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="京东小金库"
                        android:textColor="@color/background"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llQita"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/bgcurrent_un"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="14dp"
                    android:paddingTop="14dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="42dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/qita" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="其他"
                        android:textColor="@color/background"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="14dp"
                    android:paddingTop="17dp">

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/divider" />

            <LinearLayout
                android:id="@+id/llMore"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="3dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:minHeight="50dp"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="产品名称"
                    android:textColor="#ff262b36"
                    android:textSize="16sp" />

                <com.beidou.ybz.accountbook.widget.ClearEditText
                    android:id="@+id/cetProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@null"
                    android:hint="请输入产品名称"
                    android:maxLength="20"
                    android:textColorHint="#D3D6DE"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:background="@color/divider" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="#fff"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="17.5dp"
                android:text="金额"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="￥"
                    android:textColor="#262B36"
                    android:textSize="24sp" />


                <com.beidou.ybz.accountbook.widget.ClearEditText
                    android:id="@+id/cetAmount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:background="@null"
                    android:hint="请输入金额"
                    android:inputType="numberDecimal"
                    android:maxLength="12"
                    android:textColor="#262B36"
                    android:textColorHint="#D3D6DE"
                    android:textSize="14sp" />

            </LinearLayout>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_unenabled"
                android:enabled="false"
                android:text="保存"
                android:textColor="#fff"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvSave"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/button_unable"
        android:clickable="true"
        android:gravity="center"
        android:text="保存"
        android:textColor="@color/button_text_unable"
        android:textSize="17sp"
        android:visibility="gone" />
</LinearLayout>