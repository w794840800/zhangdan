<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp">

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="55.0dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:onClick="onback"
            android:src="@drawable/back_black" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tvEdit"
            android:layout_toRightOf="@id/ib_back"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="0dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/background"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title"
                android:gravity="center"
                android:paddingRight="0dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/detailColor"
                android:textSize="10sp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tvEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="编辑"
            android:textColor="@color/txt_color"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/top"
        android:background="@color/divider" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llSave"
        android:layout_below="@id/view1">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/back_lightgreen">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/back_lightgreen"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="40dp"
                            android:layout_height="0.8dp"
                            android:background="@drawable/line_background" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:gravity="center"
                            android:text="金额(元)"
                            android:textColor="@color/detailColor"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="40dp"
                            android:layout_height="0.8dp"
                            android:background="@drawable/line_background" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="120dp">

                        <TextView
                            android:id="@+id/tvAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="0.00"
                            android:textColor="@color/colorGold"
                            android:textSize="28dp" />

                        <ImageView
                            android:id="@+id/ivYihuanqing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="26dp"
                            android:layout_toRightOf="@id/tvAmount"
                            android:alpha="0"
                            android:elevation="10dp"
                            android:scaleX="1.1"
                            android:scaleY="1.1"
                            android:visibility="visible" />

                    </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/llTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="17dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/llBorrowTime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tvJie"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="借入时间"
                                android:textColor="#949AA7"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvBorrowTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="9dp"
                                android:text="2017.01.02"
                                android:textColor="#262B36"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="30dp"
                            android:background="@color/divider" />

                        <LinearLayout
                            android:id="@+id/llReturnTime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tvHuan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="还款时间"
                                android:textColor="#949AA7"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvReturnTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="9dp"
                                android:text="2017.01.02"
                                android:textColor="#262B36"
                                android:textSize="15sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="4.5dp"
                        android:background="@color/back_lightgreen" />

                    <LinearLayout
                        android:id="@+id/llMemo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorWhite"
                        android:minHeight="50dp"
                        android:orientation="vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="40dp"
                                android:layout_height="0.8dp"
                                android:background="@drawable/line_background" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:gravity="center"
                                android:text="备注内容"
                                android:textColor="@color/detailColor"
                                android:textSize="14sp" />

                            <View
                                android:layout_width="40dp"
                                android:layout_height="0.8dp"
                                android:background="@drawable/line_background" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvMemo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:lineSpacingMultiplier="1.2"
                            android:text="的好时机大多数断绝的了解到零距离对接老师讲道理接收领导大幅度 打死了降到讲到"
                            android:textColor="@color/color9A"
                            android:textSize="12sp" />

                    </LinearLayout>


                </LinearLayout>


                <View
                    android:id="@+id/viewLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    android:visibility="gone" />

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>

    <include
        layout="@layout/addassets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</RelativeLayout>