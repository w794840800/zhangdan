<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:src="@drawable/back" />

        <LinearLayout
            android:id="@+id/llHuizhangChengjiu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvChengjiuzhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:text="徽章成就值0"
                android:textColor="@color/colorGold"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ask" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@id/llTop"
        android:layout_gravity="center"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingBottom="14dp"
        android:paddingEnd="60dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingStart="60dp"
        android:paddingTop="0dp" />

    <TextView
        android:id="@+id/tvTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_huizhangtext"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:alpha="0"
        android:text="“ 在这里您可以和你的朋友一起遨游搜集 ”"
        android:textColor="#D3D6DE" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpagerSecond"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/llTop"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:overScrollMode="never" />
</LinearLayout>
