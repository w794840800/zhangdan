<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我是消息名称"
            android:textColor="#ff262b36"
            android:textSize="16sp"
            android:layout_marginTop="14.5dp"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统公告"
            android:padding="3dp"
            android:textColor="#ff949aa7"
            android:textSize="10sp"
            android:background="@drawable/message_type"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@id/title"
            android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我是消息内容我是消息内容我是消息内容消息内容我..."
            android:textColor="#ff4c566c"
            android:textSize="14sp"
            android:layout_below="@id/title"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="32dp"
            android:singleLine="true"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-11-01 13:20:20"
            android:textColor="#ff949aa7"
            android:textSize="12sp"
            android:layout_below="@id/content"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="14.5dp"
            android:layout_marginTop="23.5dp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#fff7f9ff"/>

</LinearLayout>