<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F7F9FF">
        <include layout="@layout/toolbar"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/shadow"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="#fff"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff262b36"
            android:textSize="16sp"
            android:text="被借人"/>
        <com.beidou.ybz.accountbook.widget.ClearEditText
            android:id="@+id/cetName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="28dp"
            android:textColorHint="#D3D6DE"
            android:maxLength="20"
            android:textSize="14sp"
            android:background="@null"
            android:hint="请输入被借人姓名"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/divider"/>
        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="#fff"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:paddingTop="17.5dp"
                android:textSize="16sp"
                android:text="投资金额"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/rmb"
                android:text="CNY"/>
        </LinearLayout>-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/colorBlack"
            android:background="#fff"
            android:paddingTop="17.5dp"
            android:textSize="16sp"
            android:text="金额"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center_vertical"
            android:background="#fff"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#262B36"
                android:gravity="center"
                android:textSize="24sp"
                android:text="￥"/>
            <com.beidou.ybz.accountbook.widget.ClearEditText
                android:id="@+id/cetMoney"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:background="@null"
                android:textColor="#262B36"
                android:textSize="14sp"
                android:inputType="numberDecimal"
                android:maxLength="12"
                android:textColorHint="#D3D6DE"
                android:hint="请输入借出金额"/>
        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/divider"/>
        <LinearLayout
            android:id="@+id/llShowMore"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="6dp"
            android:background="#fff"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/background"
                android:textSize="16sp"
                android:text="添加更多借款信息"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="（选填）"
                android:textColor="#949AA7"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/ivShowMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/xiala"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/divider"/>
        <LinearLayout
            android:id="@+id/llMore"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llBorrowTime"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="借出时间"
                    android:textColor="#ff262b36"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvBorrowTime"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="33dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请选择借出时间"
                    android:textColorHint="#D3D6DE"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/next" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/divider"/>
            <LinearLayout
                android:id="@+id/llReturnTime"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="#fff"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff262b36"
                    android:textSize="16sp"
                    android:text="约定归还"/>
                <TextView
                    android:id="@+id/tvReturnTime"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:paddingLeft="33dp"
                    android:textColorHint="#D3D6DE"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:background="@null"
                    android:hint="请选择约定归还时间"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/next"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/divider"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="#fff"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff262b36"
                    android:textSize="16sp"
                    android:text="利息"/>
                <com.beidou.ybz.accountbook.widget.ClearEditText
                    android:id="@+id/cetInterest"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="50dp"
                    android:textColorHint="#D3D6DE"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"
                    android:background="@null"
                    android:hint="请输入利息"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/divider"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginTop="6dp"
                android:background="#fff"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorBlack"
                    android:paddingTop="17.5dp"
                    android:textSize="16sp"
                    android:text="备注"/>
                <com.beidou.ybz.accountbook.widget.ClearEditText
                    android:id="@+id/cetMemo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="17.5dp"
                    android:paddingLeft="50dp"
                    android:gravity="top"
                    android:background="@null"
                    android:maxLength="50"
                    android:textSize="14sp"
                    android:textColorHint="#D3D6DE"
                    android:hint="请输入备注"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/divider"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_unenabled"
            android:enabled="false"
            android:text="保存"
            android:textColor="#fff"
            android:textSize="14sp" />
   </LinearLayout>

</RelativeLayout>