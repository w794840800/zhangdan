<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <solid android:color="#C8A663" />
    <corners android:radius="4sp" />
    <!-- //描边 -->
    <stroke
        android:width="0dp"
        android:color="#fff"
        android:dashGap="0dp"
        android:dashWidth="0dp" />
    <padding
        android:bottom="2dp"
        android:left="8dp"
        android:right="8dp"
        android:top="2dp" />

    <gradient
        android:angle="90"
        android:centerColor="#ffffff"
        android:endColor="#ffffff"
        android:startColor="#D6D2CE" />


</shape>
