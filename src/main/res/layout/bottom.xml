<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50.5dp"
                android:background="@color/colorWhite"
                android:orientation="vertical">

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/colorddd"/>-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50.5dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <!--首页-->
        <LinearLayout
            android:id="@+id/ll_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_main"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
               android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/tv_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:text="首页"
                android:textColor="@color/textcheck"
                android:textSize="12sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!--增值-->
        <LinearLayout
            android:id="@+id/ll_zengzhi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_zengzhi"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/tv_zengzhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:text="增值"
                android:textColor="@color/textuncheck"
                android:textSize="12sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!--财商-->
        <LinearLayout
            android:id="@+id/ll_caishang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_caishang"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/tv_caishang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:text="财商"
                android:textColor="@color/textuncheck"
                android:textSize="12sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!--我的-->
        <LinearLayout
            android:id="@+id/ll_my"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_my"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/tv_my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:text="我的"
                android:textColor="@color/textuncheck"
                android:textSize="12sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
